<Control xmlns="https://spacestation14.io"
         xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:ui="clr-namespace:Content.Client.AWS.Economy.UI.ManagementConsole"
    MinSize="550 320">
    <BoxContainer Orientation="Vertical" HorizontalExpand="True" VerticalExpand="True" Margin="5">
        <GridContainer Columns="2" HorizontalExpand="True" Margin="0 0 0 10">
            <Label Text="{Loc 'economybanksystem-management-console-management-initialized-title'}" HorizontalExpand="True" />
            <Label Name="AccountInitLabel" HorizontalExpand="True" />
            <Label Text="{Loc 'economy-bank-atm-menu-account-id'}" HorizontalExpand="True" />
            <Label Name="AccountIdLabel" HorizontalExpand="True" />
            <Label Text="{Loc 'economy-bank-atm-menu-account-owner'}" HorizontalExpand="True" />
            <Label Name="AccountOwnerLabel" HorizontalExpand="True" />
            <Label Text="{Loc 'economy-bank-atm-menu-account-balance'}" HorizontalExpand="True" />
            <Label Name="AccountBalanceLabel" HorizontalExpand="True" />
            <Label Text="{Loc 'economybanksystem-management-console-management-blocked'}" HorizontalExpand="True" />
            <Label Name="AccountBlockStatusLabel" HorizontalExpand="True" />
            <Label Text="{Loc 'economybanksystem-management-console-management-salary'}" HorizontalExpand="True" />
            <Label Name="AccountPaydayStatusLabel" HorizontalExpand="True" />
        </GridContainer>
        <PanelContainer StyleClasses="LowDivider" />
        <GridContainer Columns="2" Margin="5">
            <LineEdit Name="ChangeNamePrompt"
                    HorizontalExpand="True"/>
            <Button Name="ChangeNameButton"
                    Text="{Loc 'economybanksystem-management-console-management-change-name'}"
                    Disabled="True"
                    HorizontalAlignment="Left"/>
            <Label Text="{Loc 'economybanksystem-management-console-management-block-title'}"/>
            <Button Name="BlockButton" Text="-" Disabled="True" HorizontalAlignment="Left" />
        </GridContainer>
        <PanelContainer StyleClasses="LowDivider" />
        <GridContainer Columns="2" Margin="5">
            <Label Text="{Loc 'economybanksystem-management-console-management-job-preset'}"/>
            <OptionButton Name="JobPresetOptionButton"
                    Disabled="True"/>
            <Label Text="{Loc 'economybanksystem-management-console-management-salary'}"/>
            <SpinBox Name="SalaryAmountBox"
                    HorizontalExpand="True"
                    Value="0"
                    LineEditDisabled="True"/>
            <Button Name="ChangeSalaryInfoButton"
                    Text="{Loc 'economybanksystem-management-console-management-change-salary-info-button'}"
                    Disabled="True"/>
        </GridContainer>
        <PanelContainer StyleClasses="LowDivider" />
        <Label Text="{Loc 'economybanksystem-management-console-management-account-title'}" />
        <BoxContainer Orientation="Horizontal" HorizontalExpand="True">
            <LineEdit Name="ChangeAccountPrompt"
                    Margin="0 5"
                    HorizontalExpand="True"/>
            <Button Name="ChangeAccountButton"
                    Text="{Loc 'economybanksystem-management-console-management-account-change-button'}"
                    Disabled="True"
                    Margin="0 5"
                    HorizontalAlignment="Left"/>
        </BoxContainer>
        <Button Name="InitializeAccountButton" Text="{Loc 'economybanksystem-management-console-management-account-initialize'}" Disabled="True" HorizontalAlignment="Left" />
        <PanelContainer StyleClasses="LowDivider" Margin="0 5"/>
        <Label Name="ErrorLabel" Text="-" />
    </BoxContainer>
</Control>
