<controls:FancyWindow xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
    Title="{Loc 'economy-insurance-terminal-menu-title'}"
    MinSize="600 415">

    <GridContainer Columns="2">
        <!--Left container-->
        <BoxContainer Orientation="Vertical" HorizontalExpand="True" VerticalExpand="True" Margin="5">
            <ItemList Name="TargetListContainer"
                      Access="Public"
                      SelectMode="Button"
                      VerticalExpand="True"
                      HorizontalExpand="True">
            </ItemList>
            <Button Text = "new"/>
        </BoxContainer>
        <!--Right container-->
        <BoxContainer Name="InfoContainer" Orientation="Vertical" HorizontalExpand="True" VerticalExpand="True" Margin="5">
            <!-- Name -->
            <Label Text = "{Loc 'economy-insurance-terminal-menu-name'}" />
            <LineEdit Name="InfoContainerEditName"/>
            <!-- DNA -->
            <Label Text = "{Loc 'economy-insurance-terminal-menu-dna'}" />
            <LineEdit Name="InfoContainerEditDNA"/>
            <!-- From Pay Account -->
            <Label Text = "{Loc 'economy-insurance-terminal-menu-frompayaccount'}" />
            <LineEdit Name="InfoContainerEditFromPayAccount"/>
            <!-- To Pay Account -->
            <Label Text = "{Loc 'economy-insurance-terminal-menu-topayaccount'}" />
            <LineEdit Name="InfoContainerEditToPayAccount"/>
            <!-- Insurance Choose -->
            <Label Text = "{Loc 'economy-insurance-terminal-menu-insurancechoose'}"/>
            <OptionButton Name="InfoContainerOptionInsuranceChoose" />
            <!-- Cost -->
            <Label Text = "{Loc 'economy-insurance-terminal-menu-cost'}" />
            <LineEdit Name="InfoContainerEditCost" Editable="False"/>
            <!-- Empty space -->
            <Control VerticalExpand="True"/>
            <!-- Confirm Button -->
            <Button Name="InfoContainerButtonConfirm" Text="{Loc 'economy-insurance-terminal-menu-accept'}" />
        </BoxContainer>
    </GridContainer>
</controls:FancyWindow>
